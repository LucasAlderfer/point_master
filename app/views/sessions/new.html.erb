
<% flash.each do |key, value| %>
 <%= content_tag(:div, class: "alert alert-#{key} alert-dismissable") do %>
  <%= value %>
 <% end %>
<% end %>

<%= form_tag login_path, :id => 'login-form' do %>
  <%= label_tag :email %>
  <%= text_field_tag :email %>
  <%= label_tag :password %>
  <%= text_field_tag :password %>
  <%= submit_tag "Login" %>
<% end %>
