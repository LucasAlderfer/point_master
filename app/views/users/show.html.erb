<% flash.each do |key, value| %>
 <%= content_tag(:div, class: "alert alert-#{key} alert-dismissable") do %>
  <%= value %>
 <% end %>
<% end %>

<h1>Name: <%= current_user.name %></h1>

<% if current_user.admin? %>
  <h2>Admin Account</h2>
<% end %>

<h2>Email: <%= current_user.email %></h2>

<p>Points: <%= current_user.point_count %></p>

<p>Badges: <%= current_user.badge_display %></p>
