
<main class="new-form">
  <h2>Create A New Account</h2>
  <%= form_for @user do |f| %>
    <p><%= f.label :name %>
    <%= f.text_field :name %></p>
    <p><%= f.label :email %>
    <%= f.text_field :email %></p>
    <p><%= f.label :password %>
    <%= f.password_field :password %></p>
    <p><%= f.submit %></p>
  <% end %>
</main>
