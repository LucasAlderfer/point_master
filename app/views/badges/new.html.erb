<% flash.each do |key, value| %>
 <%= content_tag(:div, class: "alert alert-#{key} alert-dismissable") do %>
  <%= value %>
 <% end %>
<% end %>


<%= form_for @badge do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :value %>
  <%= f.number_field :value %>

  <%= f.submit "Create Badge" %>
<% end %>
